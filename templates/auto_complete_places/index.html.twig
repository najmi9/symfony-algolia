{% extends 'base.html.twig' %}

{% block title %}Hello AutoCompletePlacesController!
{% endblock %}
{% block stylesheets %}
	{{ encore_entry_link_tags('algolia_places') }}
{% endblock %}
{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<input type="search" id="address-input" placeholder="Where are we going?"/>
	</div>

	<div id="data" data-key="{{ key }}" data-id="{{ id }}"></div>
{% endblock %}
{% block javascripts %}
	{{ encore_entry_script_tags('algolia_places') }}
{% endblock %}
